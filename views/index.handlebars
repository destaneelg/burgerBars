<div class="white-box"></div>
<div class="container">
	
	<div class="row">
	    <div class="center col-sm-12">
			<img class="burgerImage" src="assets/img/burger.jpeg" alt="BurgerBars">
	        <h1>BurgerBars</h1>
	    </div>
  	</div>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <li>{{burger_name}}
      	<button class="devoured" data-devoured="{{devoured}}" data-id="{{id}}">Eat the burger.

	</button>


</li>
 

    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
  {{#if devoured}}
 <li>{{burger_name}}
      	<button class="devoured" data-devoured="{{devoured}}" data-id="{{id}}">Did you enjoy your burger?
	</button>
    {{/if}}
  {{/each}}
</ul>

<h2>Create A Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="nom">Burger Name</label>
    <input type="text" id="nom" name="name">
  </div>

  <button type="submit">Create My Burger</button>
</form>
