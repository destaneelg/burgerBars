<div class="container">
	
	<div class="row">
	    <div class="center col-xs-12">
			<img class="burgerImage" src="assets/img/burger.jpeg" alt="BurgerBars">
	        <h1>BurgerBars</h1>
	    </div>
  <div class="row">
        <div class="col" id="list-burgers">
            <h2 class="burger-title text-center">Burgers To Eat:</h2>
            {{#each burgers}}
            {{#unless this.devoured}}
            <div class="available-burgers">
                <form action="/burgers/{{this.id}}?_method=PUT" method="POST" class="update-button">
                    {{this.name}}
                    <button type="submit" class="btn- btn-default" id="burger-ready">Time to eat:</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col" id="list-devoured">
            <h2 class="burger-title text-center">Burgers You Have Ate</h2>
            {{#each burgers}}
            {{#if this.devoured}}
            <div class="devoured-burgers">
               {{this.name}}
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<form id="add-burger" action="/burgers" class="create-form" method="POST">
    <div class="form-group col-md-8">
        <input type="text" id="enter-burger" name="name" class="form-control">
        <button type="submit" class="btn btn-default" id="submit-burger">Create Burger </button>
    </div>
</form>
 	</div>